/* page/fitness/pages/videoList/index.wxss */
.videoList{
    min-height: 100vh;
    background-color: #ffffff;
}
.header {
    padding: 40rpx 30rpx 30rpx 40rpx;
    background-color: #ffffff;
}
.header .title{
    font-size: 34rpx;
    color: #666666;
    font-weight: bold;
}
.list-box{
    width: calc(100% - 60rpx);
    padding: 30rpx 30rpx 100rpx;
    /* height: 30vh; */
    overflow-y:scroll;
    overflow-x: hidden;
}
.list-box .van-tab{
    font-weight: 400 !important;
    color: #999999 !important;
}
.van-ellipsis{
    font-size: 33rpx
}
.van-tab--active {
    font-weight: 500 !important;
    color: #FC414A !important;
}
.van-hairline--bottom:after, 
.van-hairline--left:after, 
.van-hairline--right:after, 
.van-hairline--surround:after, 
.van-hairline--top-bottom:after,
.van-hairline--top:after, 
.van-hairline:after{
    border: unset !important;
}
.items .item{
    font-size:30rpx;
    margin-bottom: 20rpx;
}
.item-box{
    margin-bottom: 20rpx;
}
.item-box image{
    width: calc(100%);
    max-height: 210rpx;
}

.icon .like{
    vertical-align: sub;
    font-size: 35rpx;
}
.icon .like.like-o{
    color:#FC414A
}
#myVideo {
    height: 210rpx;
    width: calc(100%);
}
.item .name{
    font-size: 24rpx;
    font-weight: 400;
    color: #707070;
    height: 68rpx;
    overflow: hidden;
}
.bottom-box{
    background-color: #ffffff;
    height: 220rpx;
    position: absolute;
    bottom: 0;
    left:0;
    right: 0;
    padding: 0 20rpx 0 66rpx;
    display: flex;
}
.btnStyle{
    flex: 1;
}
.btnStyle:last-child{
    flex: 2;
}
.btnStyle button{
    margin-top: 30rpx;
    width: 360rpx;
}
.btnStyle:first-child button{
    width: 220rpx;
}
.tips{
    text-align: center;
    color: #999999;
}

.van-icon--image{
    font-size: 1.8rem !important;
}
