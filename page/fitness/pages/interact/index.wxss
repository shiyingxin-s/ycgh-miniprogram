/* page/fitness/pages/interact/index.wxss */


.interact{
    min-height: 100vh;
    background-color: #ffffff;
}

.con-header-box image{
    height: 480rpx;
    width: 100%;
}
.button-box{
    display: flex;
    margin: 15rpx;
}
.btnStyle{
    flex: 1;
    margin: 0 30rpx;
}
.tips{
    text-align: center;
    color: #999999;
}

.line .van-divider {
    width: 172px;
    margin: 0 auto;
}
.list{
    border-bottom-left-radius:8px;
    border-bottom-right-radius:8px;
    background: #ffffff;
    margin-bottom: 40rpx;
    overflow-y: auto;
    margin-bottom: 60rpx;
    padding-bottom: 40rpx;
    margin-top: 40rpx;
}
.list-l{
    margin-left: 30rpx;
    margin-right: 30rpx;
    /* border-top: 1px solid #CDC8C8; */
    line-height: 40px;
    padding:0 30rpx;
    color: #57171A;
    font-size: 14px;
}
.list-l .num{
    padding-right: 15px;
}
.list-l .image-text{
    display: inline-block;
    height: 37px;
    width: 37px;
    color: #ffffff;
    background: #999999;
    text-align: center;
    vertical-align: -11px;
    border-radius: 50%;
    margin-right: 15px;
}
.list-l .score{
    float: right;
}