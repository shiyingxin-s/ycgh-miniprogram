.header{
    margin-top: 160rpx;
    height: 147rpx;
    background: #FC414A;
    padding: 30rpx 40rpx;
}
.left{
    float: left;
}
.right{
    color: #FFC7C7;
    font-size: 24rpx;
    float: right;
}
.avatar{
    height: 128rpx;
    width: 128rpx;
    background: #E2E2E2;
    border-radius: 100%;
    color: #999999;
    line-height: 128rpx;
    font-size: 24rpx;
    text-align: center;
}
.avatar button{
    height: 128rpx;
    width: 128rpx;
    margin: 0 !important;
    border-radius: 100%;
    font-size: 24rpx;
    line-height: 30rpx;
    padding-top: 36rpx;
}
.avatar image{
    height: 128rpx;
    width: 128rpx;
    border-radius: 100%;
}
.info{
    padding-left: 10px;
    color: #ffffff;
}
.name{
    font-weight: 500;
    font-size: 30rpx;
    padding-top: 20rpx;
}
.num{
    margin-top: 10rpx;
    background: #fd7982;
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
    padding: 2rpx 15rpx;
    border-radius: 8px;
}
.right .text{
    margin-top: 25rpx;
}
.right .score{
    margin-top: 5rpx;
    font-size: 32rpx;
    color: #ffffff;
    font-weight: 500;
}
.section{
    padding: 30rpx;
}
.section .cell .van-cell{
    margin:30rpx 0;
    height: 132rpx;
    line-height: 90rpx;
    border-radius: 8px;
    border: 0;
    position: unset;

}
.section .cell .van-cell .van-cell__right-icon-wrap{
    height: 83rpx;
}
.section .cell .van-cell .van-cell__title{
    font-size: 30rpx;
}
.cell-r{
    position: relative;
}
.unRead{
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    background: #FC414A;
    color: #ffffff;
    border-radius: 100%;
    line-height: 40rpx;
    text-align: center;
    font-size: 20rpx;
    top: 23rpx;
    right: 25px;
}
.cell-r .icon-style{
    color: #969799;
    font-size: 15px;
    height: 46px;
}
.cell .van-cell{
    color: #666666;
}
.cell .iconfont{
    font-size: 50rpx;
    color: #666666;
    margin-right: 10px;
}
