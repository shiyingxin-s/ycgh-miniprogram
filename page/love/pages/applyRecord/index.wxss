
.list{
    margin:0 30rpx;
}
.list:first-child{
    padding-top: 35rpx;
}
.list-l{
    background-color: #ffffff;
    border-radius: 8px;
    padding: 0 20rpx 20rpx 0;
    margin-bottom: 30rpx;
    font-size: 30rpx;
}
.list-l .title{
    font-size: #333333;
    font-weight: 500;
    font-size: 28rpx;
    padding-left: 30rpx;
    padding-top: 10px;
    display: inline-block;
}
.bottom{
    padding-left: 15px;
    margin-top:19px;
    font-size: 28rpx;
    font-weight: 400;
}
.list-l .right{
    float: right;
}
.list-l .text{
    color: #999999;
    font-size: 26rpx;
}
.num{
color: #333333;
}

