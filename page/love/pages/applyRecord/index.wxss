
.list{
    margin:0 30rpx;
}
.list:first-child{
    padding-top: 35rpx;
}
.list-l{
    background-color: #ffffff;
    border-radius: 8px;
    margin-bottom: 30rpx;
    font-size: 30rpx;
}
.list-l .content .title{
    font-size: #333333;
    font-weight: 500;
    padding-left: 30rpx;
    padding-top: 10px;
    display: inline-block;
    font-size: 34rpx;
}
.bottom{
    border-top: 1px solid #DBDBDB;
    margin-top:19px;
    font-size: 28rpx;
    font-weight: 400;
    padding: 0 30rpx;
}
.btn-style button{
    margin: 4px 0 5px !important;
}
.list-l .right{
    float: right;
    line-height: 70rpx;
}
.list-l .text{
    color: #999999;
    font-size: 30rpx;
}
.list-l .content .text {
    margin-top: 25rpx;
    padding-left: 36rpx;
}
.list-l .content .text ,.list-l .content .title{
    padding-right: 30rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.line{
    height: 50rpx;
    float: left;
    width: 4px;
    border-top-left-radius: 2px;
}
