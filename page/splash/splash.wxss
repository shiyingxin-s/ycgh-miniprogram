.container{
  width: 100%;
  height: 100%;
  top:0;
  z-index: -1; 
  position: absolute;
  overflow: hidden;
} 
.splash{
  display: block;
  outline: none;
  border:0;
  height: 100%;
  width: 100%;
}
.userinfo {
  top:14%;
  transform: translate(-50%, -50%); /*向左向上分别平移自身的一半*/
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  left:50%;
  display: flex;
  position: absolute;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}