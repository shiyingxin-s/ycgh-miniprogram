.page-body{
  /* box-sizing: border-box; */
  /* padding: 0 30rpx; */
}
.left{
  position: relative;
  background: #ffffff;
  width: 200rpx;
  color: #666666;
  float: left;
  overflow-y: scroll;
}
.leftList .van-sidebar-item{
  text-align: center;
  font-size: 26rpx;
  font-weight: 400;
  border-left: 0;
  background: #ffffff;
}
.leftList .van-sidebar-item--selected{
  border-color: transparent ;
} 
.leftList .item .van-sidebar-item--selected .van-sidebar-item__text{
  width: 100%;
  height: 26px;
  background: #FC414A;
  color: #ffffff;
  border-radius: 32px;
  padding: 2px 2px;
  line-height: 26px;
} 
.right{
  float: left;
  padding: 21rpx;
  width: calc(100% - 240rpx);
}
.leftList .add {
  padding-bottom: 60px;
} 
.leftList .add .addIcon{
  color: #FC414A;
  font-size: 60rpx;
} 
.leftList .add  .van-sidebar-item--selected .van-sidebar-item__text{
  color: #FC414A;
} 
.leftList .my{
  bottom:20px;
  left: 0;
  right: 0;
} 
.leftList .item.my .van-sidebar-item--selected .van-sidebar-item__text{
  width: 65px;
}



.right .item{
  position: relative;
  height: 415rpx;
  background-color: #ffffff;
  margin-bottom: 10px;
  box-shadow:0px 0px 9px 0px rgba(211,211,211,1);
  border-radius:4px;
}
.right .item .txt{
  float: left;
  font-size: 29rpx;
  padding: 1px 5px;
  width: calc(100% - 60px);
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #3D3D3D;
}
.right .item .icon{
  padding-right: 10px;
  color: #C2C2C2;
  padding-top: 40rpx;
  float: right;
  font-size: 24rpx;
}
.right .item .icon .like{
  font-size: 45rpx;
}
.right .item .icon .like.like-o{
  color:#FC414A
}
.my-view{
  position: absolute;
  z-index: 1;
  width: 100%;
}

.my-view .left-del{
  float: left;
  width: 50rpx;
  background: #c2c2c2;
  height: 50rpx;
  text-align: center;
}
.my-view .left-del .del{
  font-size: 40rpx;
  color: #ffffff;
  margin-top: 2px;
}
.my-view .status{
  margin: 5px 10px 0 0;
  font-size: 24rpx;
  text-align: center;
  color: #ffffff;
  background: #FC414A;
  width:100rpx;
  height:40rpx;
  border-radius:20px;
  float: right;
}