<view class="loveHelp-index" style='margin-top:{{height}}px'>
   <view class="header">
    <image class="header-img" src="/image/loveHead.png" />
   </view>
   <view class="section">
     <view class="con con-1">
       <text class="title">爱心救助</text><van-icon class="like-icon" name="like" />
