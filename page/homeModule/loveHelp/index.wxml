     </view>
    <view class="con con-2">
       <text class="title">申请救助</text>
       <view class="box" data-path="../../love/pages/apply/index"
           bindtap="toPath">
          <text class="iconfont iconaixinjuanzhu"/> 
          <text class="txt">申请救助</text>
       </view>
     </view>
    <view class="con con-3 clearfix">
       <view class="title">我的申请</view>
       <view class="box" data-path="../../love/pages/applyRecord/index"
          bindtap="toPath">
          <text class="iconfont iconjilu"/> 
          <text class="txt">我的申请</text>
       </view>
     </view>
   </view>
</view>
